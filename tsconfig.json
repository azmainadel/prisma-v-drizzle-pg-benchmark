{
    "compilerOptions": { 
      "target": "ES2020",                                 
      "module": "ESNext",                                
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,           
      "strict": true,                                     
      "skipLibCheck": true,                                 
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "paths": {
        "@/*": ["./src/*"],
      },
    }
  }